    //-------------------------- scalars --------------------------------

    id Int @id @default(autoincrement())

    createdAt DateTime @default(now())

    updatedAt DateTime @updatedAt

    //-------------------------- 1 relations --------------------------------

    outletSetting OutletSetting?

    outletSettingId Int?

    //-------------------------- m relations --------------------------------

    @@map("PrinterSettings")
